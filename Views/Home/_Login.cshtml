@model Login_User

<form action="/user/login" method="post">
    <div class="form-group">
        <label for="Login_Email">Email</label>
        <input asp-for="Login_Email" class="form-control">
        <span asp-validation-for="Login_Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Login_Password">Password</label>
        <input asp-for="Login_Password" class="form-control">
        <span asp-validation-for="Login_Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Log In" class="btn btn-info">
    </div>
</form>